---

cdir: <%= @node["bcpc"]["floating"]["cidr"] %>
interface: <%= @node["bcpc"]["floating"]["interface"] %>

# overide the default testing user for this operation, 
# compute_extension:floating_ips_bulk is an admin thing
<%
  auth = user_context('admin', :file) || user_context('admin', :memory)
  raise auth
  val_pairs = auth.collect {|name,val|
    [
      name.to_s.downcase.gsub(/^os_/,''),
      val
    ]
  }.flatten
  auth_vars = Hash[ *val_pairs ]
%>
<%- auth_vars.each do |name, val| %>
<%= name %>: <%= val %>
<% end %>
